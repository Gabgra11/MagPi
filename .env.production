# Production Environment Configuration
# Use this template for production deployments

# ==================== LISTENER CONFIG ====================
LISTENER_ENABLED=true

# Audio settings for production
LISTENER_AUDIO_DEVICE=-1                    # Default device
LISTENER_SAMPLE_RATE=48000                  # Hz
LISTENER_CHUNK_SIZE=2048                    # Samples per chunk
LISTENER_BUFFER_DURATION=10                 # Seconds of circular buffer
LISTENER_SAMPLE_DURATION=5                  # Seconds per analysis window
LISTENER_SAMPLE_RATE=48000

# Detection settings - tune for your environment
LISTENER_MIN_CONFIDENCE=0.6                 # Higher = fewer false positives
LISTENER_DUPLICATE_WINDOW=45                # Seconds between same species

# Performance
LISTENER_NUM_WORKERS=2                      # Analyzer workers
LISTENER_LOG_LEVEL=WARNING                  # Production level

# ==================== DATABASE CONFIG ====================
DATABASE_TYPE=sqlite
DATABASE_PATH=/var/lib/magpi/detections.db
DATABASE_CLEANUP_DAYS=90

# ==================== BIRDNET CONFIG ====================
# Set these to your actual location
BIRDNET_LOCATION_LAT=40.7128               # Your latitude
BIRDNET_LOCATION_LON=-74.0060              # Your longitude
BIRDNET_LOCATION_LABEL="Your Location"
BIRDNET_THREADS=4
BIRDNET_GPU=false

# ==================== API SERVER ====================
API_SERVER_PORT=8000
API_SERVER_HOST=0.0.0.0
API_CORS_ORIGIN=*

# ==================== DASHBOARD CONFIG ====================
DASHBOARD_ENABLED=true
DASHBOARD_PORT=3000
DASHBOARD_HOST=0.0.0.0
DASHBOARD_API_URL=http://<listener-hostname>:8000
DASHBOARD_UPDATE_INTERVAL=10000             # Milliseconds
DASHBOARD_LOG_LEVEL=error

# ==================== MAINTENANCE ====================
CLEANUP_ENABLED=true
CLEANUP_SCHEDULE="0 2 * * *"                # 2 AM daily

BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 3 * * 0"                 # 3 AM Sundays
BACKUP_PATH=/var/lib/magpi/backups

# ==================== NOTIFICATIONS (Optional) ====================
NOTIFICATIONS_ENABLED=false
# NOTIFICATIONS_WEBHOOK_URL=https://your-webhook-url
